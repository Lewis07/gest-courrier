{% extends 'base_admin.html.twig' %}

{% block title %}{{ parent() }} Dossier {% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Dossiers</h4>
                            <ol class="breadcrumb pt-3 d-flex align-items-center">
                                <li class="breadcrumb-item">
                                    <a href="javascript:void(0);">Gestion de Courrier</a>
                                </li>
                                <li class="breadcrumb-item active">Dossier</li>
                            </ol>
                        </div><!--end col-->
                    </div><!--end row-->
                </div>
                {% include 'partials/research.html.twig' %}
                <table class="table table-striped" id="table">
                    <thead>
                    <tr>
                        <th>Courrier</th>
                        <th>Type de dossier</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for dossier in dossiers %}
                        <tr>
                            <td>{{ dossier.courrier.reference }}</td>
                            <td>{{ dossier.typDos.libelleTypeDossier }}</td>
                            <td>
                                    <a href="#" class="px-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        {# <a href="{{ path('delete_courrier',{id:courrier.id}) }}" #}
                                        <a href="#"
                                           onclick="return confirm('Est-ce que vous voulez vraiment supprimer cet element');">
                                            <i class="fas fa-trash text-danger"></i>
                                        </a>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
