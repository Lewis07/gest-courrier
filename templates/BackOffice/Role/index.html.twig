{% extends 'base_admin.html.twig' %}

{% block title %}{{ parent() }} Role{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Roles</h4>
                            <ol class="breadcrumb pt-3 d-flex align-items-center">
                                <li class="breadcrumb-item">
                                    <a href="javascript:void(0);">Gestion de Courrier</a>
                                </li>
                                <li class="breadcrumb-item active">Role</li>
                            </ol>
                        </div><!--end col-->
                        <div class="col-auto align-self-center">
                            <a href="{{ path('admin_role_new') }}" class="btn btn-primary float-right mb-3">
                                <i class="fa fa-plus"></i>
                                Nouveau role
                            </a>
                        </div>
                    </div><!--end row-->
                </div>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Role</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for role in roles %}
                        {% set titre = role.titreRole %}
                        <tr>
                            <td>{{ titre|replace({'ROLE_':''})|title }}</td>
                            <td class="{{ (titre == 'ROLE_ADMIN' or titre == 'ROLE_DIRECTEUR') ? 'd-none' : '' }}">
                                <a href="{{ path('admin_role_edit',{id:role.id}) }}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="{{ path('admin_role_delete',{id:role.id}) }}"
                                   onclick="return confirm('Est-ce que vous voulez vraiment supprimer cet element');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
