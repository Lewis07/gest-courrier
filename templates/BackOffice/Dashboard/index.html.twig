              <i class="fas fa-user-circle text-white"></i>
              <span class="text-white mx-2">Utilisateurs</span>
              <span class="text-white">{{ users }}</span>
            </div>
            <div class="col-lg-3 col-sm-12 margin-top-30 margin-left-20 card-statistic-item">
              <i class="fas fa-folder text-white"></i>
              <span class="text-white mx-2">Types de dossiers</span>
              <span class="text-white">{{ types_dossiers }}</span>
            </div>
            <div class="col-lg-3 col-sm-12 margin-top-30 margin-left-20 card-statistic-item">
              <i class="fas fa-folder text-white"></i>
              <span class="text-white mx-2">Dossiers</span>
              <span class="text-white">{{ dossiers }}</span>
            </div>
            <div class="col-lg-3 col-sm-12 margin-top-30 margin-left-20 card-statistic-item">
              <i class="fas fa-envelope text-white"></i>
              <span class="text-white mx-2">Types de courriers</span>
              <span class="text-white">{{ types_courriers }}</span>
