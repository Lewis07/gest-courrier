{% extends 'base_admin.html.twig' %}

{% block title %}{{ parent() }} Utilisateur {% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Utilisateurs</h4>
                            <ol class="breadcrumb pt-3 d-flex align-items-center">
                                <li class="breadcrumb-item">
                                    <a href="javascript:void(0);">Gestion de Courrier</a>
                                </li>
                                <li class="breadcrumb-item active">Utilisateur</li>
                            </ol>
                        </div><!--end col-->
                    </div><!--end row-->
                </div>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Pseudo</th>
                        <th>Telephone</th>
                        <th>Email</th>
                        <th>Adresse</th>
                        <th>Fonction</th>
                        {#                        <th>Service</th>#}
                        <th>Actions</th>
                    </tr>
                    </thead>

                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.Nom }}</td>
                            <td>{{ user.Prenom }}</td>
                            <td>{{ user.Username }}</td>
                            <td>{{ user.Telephone }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.Adresse }}</td>
                            <td>{{ user.Fonction }}</td>
                            {#                            <td>{{ user.service.nomservice }}</td>#}
                            <td>
                                <a href="{{ path('admin_user_edit',{id:user.id})}}">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="{{ path('admin_user_delete',{id:user.id})}}"
                                   onclick="return confirm('Est-ce que vous voulez vraiment supprimer cet element');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
