{% extends "base_admin.html.twig" %}
{% block title %}{{ parent() }} Modification du l'utilisateur {% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Utilisateurs</h4>
                            <ol class="breadcrumb pt-3 d-flex align-items-center">
                                <li class="breadcrumb-item">
                                    <a href="javascript:void(0);">Gestion de Courrier</a>
                                </li>
                                <li class="breadcrumb-item">Utilisateur</li>
                                <li class="breadcrumb-item active">Modification</li>
                            </ol>
                        </div><!--end col-->
                    </div><!--end row-->
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                    {{ form_label(form.roles) }}
                    {{ form_widget(form.roles) }}
                    <div class="d-flex">
                        <button class="btn btn-success mx-2 rounded-0">Modifier</button>
                        <a href="{{ path('admin_user_index') }}"
                           class="btn btn-warning rounded-0">
                            Retourner
                        </a>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}