{% extends "base_admin.html.twig" %}

{% block title %}Modification du profil {{ parent() }}{% endblock %}

{% block body %}
    <div class="container bootstrap snippet">

        <div class="container mt-4">
            <h4>Modification du profil</h4>
            {{ form_start(form) }}
            <div>
{#                <img src="{{ asset('img/no-image.png') }}" class="avatar" alt="avatar">#}
{#                <h6>Mettez un photo...</h6>#}
{#                <input type="file" class="text-center center-block file-upload">#}
                {% if app.user.picture != NULL %}
                    <img src="{{ asset(uploads/images/users/' ~ app.user.picture) }}"
                         alt="picture teacher" class="rounded-circle thumb-xs">
                {% else %}
                    <img src="{{ asset('img/no-image.png') }}" alt="No image" class="avatar">
                {% endif %}
            </div></hr><br>

            <div class="row">
                <div class="col-md-4">{{ form_row(form.nom) }}</div>
                <div class="col-md-4">{{ form_row(form.prenom) }} </div>
            </div>

            <div class="row">
                <div class="col-md-3">{{ form_row(form.username) }}</div>
                <div class="col-md-3">{{ form_row(form.telephone) }}</div>
            </div>

            <div class="row">
                <div class="col-md-4">{{ form_row(form.email) }}</div>
                <div class="col-md-4">{{ form_row(form.adresse) }}</div>
            </div>

            <div class="row">
                <div class="col-md-3">{{ form_row(form.fonction) }}</div>
                <div class="col-md-3">{{ form_row(form.departement) }}</div>
            </div>
            <button type="submit" class="btn btn-primary">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}