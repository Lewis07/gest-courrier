{% extends 'base_admin.html.twig' %}

{% block title %}{{ parent() }} Corbeille{% endblock %}

{% block body %}
    {% include 'partials/header.html.twig' %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">
                        <div class="col">
                            <h4 class="page-title">Corbeille</h4>
                            <ol class="breadcrumb pt-3 d-flex align-items-center">
                                <li class="breadcrumb-item">
                                    <a href="javascript:void(0);">Gestion de Courrier</a>
                                </li>
                                <li class="breadcrumb-item active">Corbeille</li>
                            </ol>
                        </div><!--end col-->
                    </div><!--end row-->
                </div>

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Emetteur</th>
                        <th>Objet</th>
                        <th>Date</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for trashe in trashes %}
                        <tr>
                            <td>{{ trashe.sender.email }}</td>
                            <td>
                                {{ trashe.objetCourrier }}
                            </td>
                            <td>
                                {{ trashe.dateEnvoie|date('d/m/Y') }}
                            </td>
                            <td>
{#                                <a href="{{ path('courrier_received_show',{id:received_courrier.id})}}">#}
{#                                    <i class="fas fa-eye"></i>#}
{#                                </a>#}
                                <a href="{{ path('courrier_delete',{id:trashe.id})}}"
                                   onclick="return confirm('Est-ce que vous voulez supprimer definitivement ce courrier');"
                                >
                                    <i class="fas fa-trash text-danger"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr align="center">
                            <td colspan="3">
                                Aucun courrier dans le corbeille
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
